<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent_jadwal"
        android:layout_width="315dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_cardjadwal"/>

        <View
            android:id="@+id/rectangle_8"
            android:layout_width="115dp"
            android:layout_height="32dp"
            android:layout_marginTop="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/right_corner"/>

        <TextView
            android:id="@+id/txt_hari_jadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minggu"
            android:textColor="#fff"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="31dp"
            android:textSize="19sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="#fff"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_child_jadwal"
            android:layout_marginTop="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            tools:listitem="@layout/item_target_child"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>