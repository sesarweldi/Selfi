<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Edit Todolist"
        android:textColor="#000"
        android:textSize="34sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="77dp"
        android:layout_height="3dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/roundedshape" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Edit Judul Todolist"
        android:textColor="#000"
        android:textSize="13sp"/>

    <EditText
        android:id="@+id/et_judul_edit_todo"
        android:layout_width="320dp"
        android:layout_height="34dp"
        android:layout_marginLeft="30dp"
        android:background="#4DC4C4C4"
        android:fontFamily="@font/poppins_medium"
        android:hint="Masukkan Judul"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:textColorHint="#4D000000"
        android:maxLines="1"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Masukkan Tanggal"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:textSize="13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_tanggal_edit_todo"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_marginLeft="30dp"
            android:background="#4DC4C4C4"
            android:fontFamily="@font/poppins_medium"
            android:hint="0000-00-00"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            android:inputType="date"
            android:textColor="#000"
            android:textColorHint="#4D000000"
            android:padding="5dp"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/img_edt_tanggal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_date_range_black_24dp"
            android:layout_gravity="center"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Masukkan Tanggal"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:textSize="13sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_jam_edit_todo"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_marginLeft="30dp"
            android:background="#4DC4C4C4"
            android:fontFamily="@font/poppins_medium"
            android:hint="00:00"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            android:inputType="date"
            android:textColor="#000"
            android:textColorHint="#4D000000"
            android:padding="5dp"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/img_edt_jam"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_time"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_simpan_edit_todo"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:background="@drawable/roundedshape"
        android:layout_marginTop="24dp"
        android:layout_centerInParent="true"
        android:text="Simpan"
        android:textColor="#fff"
        android:theme="@style/MyButtonStyle"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="64dp"/>


</LinearLayout>