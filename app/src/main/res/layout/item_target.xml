<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardItemTarget"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="17dp"
        android:layout_gravity="center"
        app:cardElevation="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="12dp"
                android:id="@+id/txt_JudulTarget"
                android:layout_height="wrap_content"
                android:text="Judul Targetasdasdasdasdasdasdasdasdasdasdasdsadasd"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="#030303"
                android:textSize="17sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_DeskripsiTarget"
                android:text="asudhsaid asid iassbdbsia bashdb ahbda shbda hbbdajh sbbsajhdb basjh bbasjhb  akjsdbas jkbbsakdb akjsb askj baskj basjk baskjj bsajk bajk baskj b"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="35dp"
                android:textSize="11sp"
                android:textColor="#030303"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="30dp"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>