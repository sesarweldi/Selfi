<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hari_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="31sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_tanggal_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13-3-2021"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_bulan_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="March"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="31sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="1.5dp"
                android:layout_height="110dp"
                android:background="#4D000000"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_judul_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/montserrat"
                    android:text="Tugas Matematika Limit"
                    android:textColor="#000"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="22sp"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_jam_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09.00 am"
                    android:textSize="16sp"
                    android:textColor="#80000000"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <CheckBox
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="end"
                android:id="@+id/cb_todo"
                style="@style/CustomCircleCheckbox"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Selesai"
                android:fontFamily="@font/montserrat"
                android:textSize="10sp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="5dp"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>